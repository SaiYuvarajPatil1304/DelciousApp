<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_page"
    tools:context=".beverages">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgcoffee"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/coffee"
                android:layout_marginLeft="30dp"
                android:padding="3dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/txtcoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/imgcoffee"
                android:text="COFFEE"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btncoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtcoffee"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgcoffee"
                android:text="SELECT"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgtea"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/imgcoffee"
                android:layout_marginTop="20dp"
                android:src="@drawable/tea"
                android:layout_marginLeft="30dp"
                android:padding="3dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/txttea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgcoffee"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/imgtea"
                android:text="TEA"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btntea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttea"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgtea"
                android:text="SELECT"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imglemonade"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/imgtea"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/lemonade"
                android:layout_marginLeft="30dp"
                android:padding="3dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/txtlemonade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgtea"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imglemonade"
                android:text="LEMON-ADE"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnlemonade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtlemonade"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imglemonade"
                android:text="SELECT"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imghotchoclate"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/imglemonade"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/hot_choclate"
                android:padding="3dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/txthotchoclate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imglemonade"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imghotchoclate"
                android:text="HOT-CHOCLATE"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnhotchoclate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txthotchoclate"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imghotchoclate"
                android:text="SELECT"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgsoda"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/imghotchoclate"
                android:layout_marginLeft="30dp"
                android:src="@drawable/soda"
                android:padding="3dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/txtsoda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imghotchoclate"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgsoda"
                android:text="SODA"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnsoda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtsoda"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgsoda"
                android:text="SELECT"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgfruitjuice"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/imgsoda"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/fruit_juice"
                android:padding="3dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/txtfruitjuice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgsoda"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/imgfruitjuice"
                android:text="FRUIT-JUICE"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnfruitjuice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtfruitjuice"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgfruitjuice"
                android:text="SELECT"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>

</ScrollView>