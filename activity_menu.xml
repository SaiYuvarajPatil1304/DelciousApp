<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_page"
    tools:context=".menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgcarticon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/imgsnacks"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/cart_icon" />
            <ImageView
                android:id="@+id/imgsnacks"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/snaks"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/txtsnacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgsnacks"
                android:layout_marginLeft="20dp"
                android:text="SNACKS"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btnsnacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgsnacks"
                android:layout_below="@+id/txtsnacks"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="open"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <ImageView
                android:id="@+id/imgtiffens"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/tiffens"
                android:layout_below="@+id/imgsnacks"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/txttiffens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgtiffens"
                android:layout_below="@+id/imgsnacks"
                android:layout_marginLeft="20dp"
                android:text="BREAKFAST"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btntiffens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgtiffens"
                android:layout_below="@+id/txttiffens"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="open"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <ImageView
                android:id="@+id/imgmeals"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/meal"
                android:layout_below="@+id/imgtiffens"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/txtmeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgmeals"
                android:layout_below="@+id/imgtiffens"
                android:layout_marginLeft="15dp"
                android:text="MEALS"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btnmeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgmeals"
                android:layout_below="@+id/txtmeals"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="open"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <ImageView
                android:id="@+id/imgbeverages"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/beverages"
                android:layout_below="@+id/imgmeals"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/txtbeverages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgbeverages"
                android:layout_below="@+id/imgmeals"
                android:layout_marginLeft="20dp"
                android:text="BEVARAGES"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btnbeverages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgbeverages"
                android:layout_below="@+id/txtbeverages"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="open"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <ImageView
                android:id="@+id/imgicecream"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/icecream"
                android:layout_below="@+id/imgbeverages"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/txticecream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgicecream"
                android:layout_below="@+id/imgbeverages"
                android:layout_marginLeft="20dp"
                android:text="ICE-CREAM"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="40dp" />
            <Button
                android:id="@+id/btnicecream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgicecream"
                android:layout_below="@+id/txticecream"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="open"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <ImageView
                android:id="@+id/imgnonveg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/nonveg"
                android:layout_below="@+id/imgicecream"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/txtnonveg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgnonveg"
                android:layout_below="@+id/imgicecream"
                android:layout_marginLeft="20dp"
                android:text="NON-VEG"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50dp" />
            <Button
                android:id="@+id/btnnonveg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgnonveg"
                android:layout_below="@+id/txtnonveg"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="open"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </RelativeLayout>

</ScrollView>